@model AspUploadSample.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<dl class="dl-horizontal">
    <dt>
        User
    </dt>

    <dd>
        @Html.DisplayFor(model => model.UserName)
    </dd>

    <dt>
        Role:
    </dt>

    <dd>
       @Html.DisplayFor(model => model.userRoles)
    </dd>
</dl>

<table class="table">
    <tr>
        <th>
            File Name
        </th>
    </tr>
    @foreach (var item in Model.UserFiles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>

            <td>
                @Ajax.ActionLink("Details", "Details", "Files", new { id = item.Id }, new AjaxOptions() { UpdateTargetId = "fileAction", InsertionMode = InsertionMode.Replace })
            </td>
        </tr>
    }
</table>
<div id="fileAction"></div>

@Scripts.Render("~/bundles/jquery")
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>